<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
    {{>navbar}}

    <div class="main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="container-fluid main_content">
                    <form  class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name.." autocomplete="on">
                      
                        <input type="submit" value="search" id="submitBtn">
                        <p class="temp_err"></p>
                    </form>
                    <div class="temperature_info">
                        <div class="top_layer">
                            <p id="day">Saturday</p>
                            <p id="date">22 may</p>
                        </div>
                        <div class="main_layer">
                            <p id="city_name">Get output here</p>
                            <div class="middle_layer data_hide">
                                <p id="temp"><span id="temp_real_val">0</span><sup>0</sup>C</p>
                                <p class="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>




    {{>footer}}
    <script src="js/main.js"></script>
</body>
    
</html>